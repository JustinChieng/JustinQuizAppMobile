<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView to display the count of added questions -->
    <TextView
        android:id="@+id/tvQuestionCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Questions added: 0"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- TextInputLayout for question title -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/questionTitleInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputEditText.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etQuestionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Question Title" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- TextInputLayout for options A, B, C, D -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/optionAInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputEditText.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etOptionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option A" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/optionBInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputEditText.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etOptionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option B" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/optionCInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputEditText.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etOptionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option C" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/optionDInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputEditText.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etOptionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option D" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Repeat similar TextInputLayouts for options B, C, D -->

    <!-- TextInputLayout for correct answer -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/correctAnswerInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputEditText.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correct Answer" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Button to add a question dynamically -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">

        <!-- Button to add a question dynamically -->
        <Button
            android:id="@+id/btnAddQuestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Question" />

        <!-- Button to mark question addition as "Done" -->
        <Button
            android:id="@+id/btnDone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Done" />
    </LinearLayout>

</LinearLayout>